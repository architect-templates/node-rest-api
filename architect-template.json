{
  "database": {
    "required": true,
    "choices":[
      {
        "name": "PostgreSQL",
        "architect_yml": [
          "name: PostgreSQL",
          "secrets:",
          "  db_user:",
          "    description: Root user to assign to the component's DB",
          "    default: architect",
          "  db_pass:",
          "    description: Root password to assign to the component's DB",
          "    default: secret",
          "  db_name:",
          "    description: Name of the DB the component will store content in",
          "    default: api-db",
          "  db_port:",
          "    description: Port for the db",
          "    default: 5432",
          "services:",
          "  api-db:",
          "    image: postgres:latest",
          "    interfaces:",
          "      database:",
          "        port: ${{ secrets.db_port }}",
          "        protocol: postgresql",
          "    environment:",
          "      POSTGRES_USER: ${{ secrets.db_user }}",
          "      POSTGRES_PASSWORD: ${{ secrets.db_pass }}",
          "      POSTGRES_DB: ${{ secrets.db_name }}"
        ]
      },
      {
        "name": "MySQL",
        "architect_yml": [
          "name: MySQL",
          "secrets:",
          "  db_user:",
          "    description: Root user to assign to the component's DB",
          "    default: architect",
          "  db_pass:",
          "    description: Root password to assign to the component's DB",
          "    default: secret",
          "  db_name:",
          "    description: Name of the DB the component will store content in",
          "    default: api-db",
          "  db_port:",
          "    description: Port for the db",
          "    default: 3306",
          "services:",
          "  api-db:",
          "    image: mysql:latest",
          "    interfaces:",
          "      database:",
          "        port: ${{ secrets.db_port }}",
          "        username: ${{ secrets.db_user }}",
          "        password: ${{ secrets.db_pass }}",
          "        protocol: mysql",
          "        path: /${{ secrets.db_name }}",
          "    environment:",
          "      MYSQL_ROOT_PASSWORD: ${{ secrets.db_pass }}",
          "      MYSQL_DATABASE: ${{ secrets.db_name }}"
        ]
      },
      {
        "name": "MariaDB",
        "architect_yml": [
          "name: MariaDB",
          "secrets:",
          "  db_user:",
          "    description: Root user to assign to the component's DB",
          "    default: architect",
          "  db_pass:",
          "    description: Root password to assign to the component's DB",
          "    default: secret",
          "  db_name:",
          "    description: Name of the DB the component will store content in",
          "    default: api-db",
          "  db_port:",
          "    description: Port for the db",
          "    default: 3306",
          "services:",
          "  api-db:",
          "    image: mariadb:latest",
          "    interfaces:",
          "      database:",
          "        port: ${{ secrets.db_port }}",
          "        username: ${{ secrets.db_user }}",
          "        password: ${{ secrets.db_pass }}",
          "        protocol: mysql",
          "        path: /${{ secrets.db_name }}",
          "    environment:",
          "      MYSQL_ROOT_PASSWORD: ${{ secrets.db_pass }}",
          "      MYSQL_DATABASE: ${{ secrets.db_name }}"
        ]
      }
    ]
  }
}
